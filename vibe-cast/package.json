{
  "name": "vibe-cast",
  "version": "1.0.0",
  "description": "A Mood-Based Weather & Music App that combines real-time weather data and music recommendations.",
  "main": "src/js/app.js",
  "scripts": {
    "start": "npm run build-css && live-server src",
    "build": "npm run build-css && npm run build-js",
    "build-css": "sass src/assets/styles/main.scss src/assets/styles/main.css",
    "watch-css": "sass --watch src/assets/styles/main.scss src/assets/styles/main.css",
    "build-js": "webpack --mode production"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bootstrap": "^5.1.3",
    "dotenv": "^10.0.0"
  },
  "devDependencies": {
    "node-sass": "^6.0.1",
    "webpack": "^5.64.0",
    "webpack-cli": "^4.9.1",
    "live-server": "^1.2.1"
  },
  "author": "Your Name",
  "license": "MIT"
}